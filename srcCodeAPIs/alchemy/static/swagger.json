{
  "swagger": "2.0",
  "info": {
    "title": "Gestion Étudiants API",
    "version": "1.0"
  },
  "paths": {
    "/login": {
      "post": {
        "summary": "Se connecter",
        "parameters": [
          {
            "in": "body",
            "name": "informations d'identification",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "username": { "type": "string" },
                "password": { "type": "string" }
              }
            }
          }
        ],
        "responses": { "200": { "description": "JWT token" } }
      }
    },
    "/new": {
      "post": {
        "summary": "Ajouter un étudiant (JWT requis)",
        "parameters": [
          {
            "in": "body",
            "name": "étudiant",
            "required": true,
            "schema": { "type": "object", "properties": { "nom": { "type": "string" } } }
          }
        ],
        "security": [ { "jwt": [] } ],
        "responses": { "200": { "description": "Étudiant ajouté" } }
      }
    }
  },
  "securityDefinitions": {
    "jwt": {
      "type": "apiKey",
      "name": "x-access-token",
      "in": "header"
    }
  }
}
